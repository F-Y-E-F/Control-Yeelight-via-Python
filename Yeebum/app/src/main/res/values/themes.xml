<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yeebum" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">#77FFFFFF</item>
    </style>

    <style name="LoadingDialogTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">3</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

</resources>